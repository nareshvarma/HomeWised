<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F3F3"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jobid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/jobid"
            android:textSize="20dp" />


       <TextView
            android:id="@+id/text_airconditon_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"

            android:text="Air Conditioning Reapir"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/text_airconditon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:text="@string/time"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/text_airconditon_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:text="@string/address"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/text_cust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
android:layout_below="@+id/text_airconditon_address"
            android:text="CUST_1019"
            android:textSize="15dp" />
        <ImageView
              android:id="@+id/img_rightside"
              android:layout_width="40dp"
              android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
              android:src="@drawable/angleright"
            android:layout_below="@+id/text_airconditon_repair"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>




    <Button
            android:id="@+id/btn_schedule"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:background="#4C92C2"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="Scheduled  +"
            android:textColor="#fff" />



    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"

        android:layout_marginTop="10dp"
        android:background="#A9A9A9" />

</LinearLayout>