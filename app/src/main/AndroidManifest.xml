<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.materialdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="info.androidhive.HomeWised.activity.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="info.androidhive.HomeWised.activity.MainActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="info.androidhive.HomeWised.activity.ForgotPassword"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="info.androidhive.HomeWised.activity.LoginActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>
